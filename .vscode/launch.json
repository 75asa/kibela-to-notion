{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "start:TAG_NOTES",
      "request": "launch",
      "type": "node",
      "runtimeArgs": [
        "-r",
        "${workspaceFolder}/node_modules/ts-node/register",
        "-r",
        "${workspaceFolder}/node_modules/tsconfig-paths/register"
      ],
      "args": ["${workspaceFolder}/src/main.ts", "TAG_NOTES"],
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "console": "integratedTerminal",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "env": {
        "NODE_ENV": "development",
        "TS_NODE_PROJECT": "tsconfig.json",
        "TS_NODE_TRANSPILE_ONLY": "true"
      }
    },
    {
      "name": "start:REPLACE_PATHS",
      "request": "launch",
      "type": "node",
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "${workspaceFolder}/node_modules/ts-node/register",
        "-r",
        "${workspaceFolder}/node_modules/tsconfig-paths/register"
      ],
      "args": [
        "${workspaceFolder}/src/main.ts",
        "REPLACE_PATHS",
        "-n",
        "./kibela-tambourine-0/notes/",
        "-d",
        "0"
      ],
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "console": "integratedTerminal",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "env": {
        "NODE_ENV": "development",
        "TS_NODE_PROJECT": "tsconfig.json",
        "TS_NODE_TRANSPILE_ONLY": "true"
      }
    },
    {
      "name": "start:UPLOAD_IMAGES",
      "request": "launch",
      "type": "node",
      "runtimeArgs": [
        "-r",
        "${workspaceFolder}/node_modules/ts-node/register",
        "-r",
        "${workspaceFolder}/node_modules/tsconfig-paths/register"
      ],
      "args": ["${workspaceFolder}/src/main.ts", "UPLOAD_IMAGES",],
      // for DEBUG
      // "args": [
      //   "${workspaceFolder}/src/main.ts",
      //   "UPLOAD_IMAGES",
      //   "-d",
      //   "0",
      //   "-a",
      //   "./kibela-tambourine-0/attachments/",
      //   "-s",
      //   "GoogleDrive"
      // ],
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "console": "integratedTerminal",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "env": {
        "NODE_ENV": "development",
        "TS_NODE_PROJECT": "tsconfig.json",
        "TS_NODE_TRANSPILE_ONLY": "true"
      }
    }
  ]
}
